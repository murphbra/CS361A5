<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous">
    function deleteEvent(id){
        $.ajax({
            url: '/events/' + id,
            type: 'DELETE',
            sucess: function(result){
                window.location.reload(true);
            }
        }); 
    };
    </script>
</head>
<body>
    View Events Page
    <div style="border:solid">
        Pages:
        <br>
        <a href="https://cs361a5.wl.r.appspot.com/">Create a new event</a>
        <br>
        <a href="https://cs361a5.wl.r.appspot.com/events">View all saved events</a>
    </div>
    <br>
    <br>
    <table style="border:solid">
        <caption>Saved Events</caption>
        <thead>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>Invite List</th>
        </thead>

        <tbody>

            {{#each events}}
            <tr>
                <td>
                    {{this.title}}
                </td>
                <td>
                    {{this.description}}
                </td>
                <td>
                    {{this.date}}
                </td>
                <td>
                    {{this.invites}}
                </td>
                <td><button onclick ="deleteEvent({{this.id}})">Delete</button></td>
                <td><button>View Event Page</button></td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</body>
</html>